#:kivy 2.0.0
<MainScreen>:
    status: status_label
    playlist: playlist_input
    button: sync_button
    exit_button: exit_button
    spinner: spinner
    MDBoxLayout:
        orientation: "vertical"
        padding: 25
        MDLabel:
            text: "Quest Synth Sync"
        MDLabel:
            text: "To synchronize with a SynthRiderz playlist, enter the playlist ID below and click 'Synchronize.'  For multiple playlists, input playlist IDs separated by a comma.  For example: 'id1,id2,id3'.  NOTE: The user input textfield has some bugs with deletion because of Android.  To delete, select the text that's already there and type over it."
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 25
            MDTextField:
                id: playlist_input
                hint_text: "Playlist ID(s)"
            MDRaisedButton:
                id: sync_button
                text: "Synchronize"
                on_press: root.sync()
            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                active: False
        MDLabel:
            id: status_label
            text: "No current actions"
        MDRaisedButton:
            id: exit_button
            text: "Exit App"
            on_press: root.exit()